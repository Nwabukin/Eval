# Database â€” must include port (e.g. :5432). Prefer direct connection for local dev.
# Direct (recommended for local): postgresql://postgres:PASSWORD@db.PROJECT_REF.supabase.co:5432/postgres
# Pooler (Session):  postgresql://postgres.PROJECT_REF:PASSWORD@aws-0-REGION.pooler.supabase.com:5432/postgres
# Pooler (Transaction): postgresql://postgres.PROJECT_REF:PASSWORD@aws-0-REGION.pooler.supabase.com:6543/postgres?pgbouncer=true
DATABASE_URL="postgresql://user:password@host:5432/dbname"

# JWT
JWT_SECRET="your-jwt-secret-here"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-refresh-secret-here"
JWT_REFRESH_EXPIRES_IN="7d"

# Resend (Email)
RESEND_API_KEY="re_your_resend_api_key"

# App
PORT=3000
NODE_ENV="development"
FRONTEND_URL="http://localhost:3001"
API_PREFIX="api/v1"
